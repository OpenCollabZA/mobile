/*
 * tools/welcome/js/welcome.services.js
 */
(function(synthMobile){
	'use strict';

/**
 * Create factory for the welcome Service
 */
	synthMobile.factory('WelcomeService',
	['ModuleService',
	function(ModuleService) {

		/**
		 * Creates a new instance of the WelcomeService
		 */
		function WelcomeService() {}

		/**
		 * Gets the welcome data
		 */
		WelcomeService.prototype.getWelcome = function(moduleId) {
			return ModuleService.getToolData(moduleId, 'welcome');
		};

		return new WelcomeService();
	}
]);
})(synthMobile);
